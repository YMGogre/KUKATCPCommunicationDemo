<ETHERNETKRL>
	<CONFIGURATION>
		<EXTERNAL>
			<!-- 确定外部系统是作为服务器还是客户端与机器人控制系统通讯（可选）。
			* Server：外部系统是服务器。
			* Client：外部系统是客户端。
			默认值：Server -->
			<TYPE>Client</TYPE>
			<IP>10.52.7.168</IP>	<!-- TYPE = Client 时，将忽略 EXTERNAL 段中的 IP 地址和端口号 -->
			<PORT>59152</PORT>		<!-- TYPE = Client 时，将忽略 EXTERNAL 段中的 IP 地址和端口号 -->
		</EXTERNAL>
		<INTERNAL>
			<IP>172.31.1.147</IP>	<!-- 机器人控制系统作为服务器的 IP 地址 -->
			<PORT>54600</PORT>		<!-- 机器人控制系统作为服务器的端口号 -->
			<ALIVE Set_Flag="1"/>	<!-- 建立连接时，flag 1 将置位 -->
		</INTERNAL>
	</CONFIGURATION>
	<RECEIVE>
		<XML>
			<!-- 当上位机发来的数据时，flag 2 将置位，
			在 KRL 代码中，可通过 wait for 语句等待标志位。
			（如果通过 Set_Out/Set_Flag 设置一个输
			出端或插上一个旗标，那么程序代码中的相应
			系统变量 $OUT[]/$FLAG[] 必须被重新复位） -->
			<ELEMENT Tag="Ext/Msg" Type="STRING" Set_Flag="2"/>
		</XML>
	</RECEIVE>
	<SEND>
		<XML>
         <ELEMENT Tag="Robot/Ack" />
		</XML>
	</SEND>
</ETHERNETKRL>